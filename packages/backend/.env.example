# 数据库配置
DATABASE_URL="postgresql://username:password@localhost:5432/qa_app_dev?schema=public"

# JWT配置
JWT_SECRET="your-super-secure-jwt-secret-key-here"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"
JWT_ISSUER="qa-app"
JWT_AUDIENCE="qa-app-users"

# 应用配置
NODE_ENV="development"
PORT=3001
CORS_ORIGIN="http://localhost:3000"

# 安全配置
BCRYPT_ROUNDS=12
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# 邮件服务配置（可选）
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_USER="your-email@example.com"
SMTP_PASS="your-email-password"
FROM_EMAIL="noreply@qa-app.com"
FROM_NAME="QA Fixed Income Platform"

# Redis配置（可选，用于缓存和队列）
REDIS_URL="redis://localhost:6379"

# 文件上传配置
UPLOAD_MAX_SIZE="10mb"
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,application/pdf"

# 外部服务配置
BLOCKCHAIN_RPC_URL="https://mainnet.infura.io/v3/YOUR-PROJECT-ID"
COINGECKO_API_URL="https://api.coingecko.com/api/v3"

# 监控和日志
LOG_LEVEL="info"
SENTRY_DSN=""

# 开发工具
SWAGGER_ENABLED=true
DEBUG_SQL=false