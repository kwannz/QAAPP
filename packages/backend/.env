# 数据库配置
DATABASE_URL="postgresql://qa_user:qa_password@localhost:5432/qa_app_dev?schema=public"

# JWT配置
JWT_SECRET="qa-app-super-secure-jwt-secret-key-2024-development"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"
JWT_ISSUER="qa-app"
JWT_AUDIENCE="qa-app-users"

# 应用配置
NODE_ENV="development"
PORT=3001
CORS_ORIGIN="http://localhost:3000"

# 安全配置
BCRYPT_ROUNDS=12
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Redis配置（可选，用于缓存和队列）
REDIS_URL="redis://localhost:6379"

# 文件上传配置
UPLOAD_MAX_SIZE="10mb"
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,application/pdf"

# 区块链配置
BLOCKCHAIN_RPC_URL="https://sepolia.infura.io/v3/YOUR-PROJECT-ID"
ETHEREUM_RPC_URL="https://eth-mainnet.alchemyapi.io/v2/YOUR-API-KEY"
POLYGON_RPC_URL="https://polygon-mainnet.alchemyapi.io/v2/YOUR-API-KEY"
ARBITRUM_RPC_URL="https://arb-mainnet.alchemyapi.io/v2/YOUR-API-KEY"

# 外部服务配置
COINGECKO_API_URL="https://api.coingecko.com/api/v3"

# 监控和日志
LOG_LEVEL="info"
SENTRY_DSN=""

# 开发工具
SWAGGER_ENABLED=true
DEBUG_SQL=false