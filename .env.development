# QAapp 环境变量配置文件
# 复制此文件为 .env.development, .env.staging, .env.production 并填入实际值

# =================================
# 应用基础配置
# =================================
NODE_ENV=development
PORT=3001

# =================================
# 数据库配置
# =================================
DATABASE_URL="postgresql://postgres:postgres@postgres:5432/qa_app_dev?schema=public"
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=qa_app_dev

# =================================
# Redis配置
# =================================
REDIS_URL="redis://redis:redis@redis:6379"
REDIS_PASSWORD=redis

# =================================
# JWT和加密配置
# =================================
JWT_SECRET="dev-jwt-secret-key-for-development-only"
JWT_EXPIRES_IN=7d
ENCRYPTION_KEY="dev-encryption-key-32-chars-long"

# =================================
# API配置
# =================================
API_VERSION=v1
CORS_ORIGIN="http://localhost:3000,https://qa-app.com"
ENABLE_SWAGGER=true
API_RATE_LIMIT=100

# =================================
# 前端配置
# =================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001
NEXT_PUBLIC_APP_NAME="QA Fixed Income Platform"
NEXT_PUBLIC_APP_VERSION=1.0.0

# =================================
# Web3配置
# =================================
NEXT_PUBLIC_CHAIN_ID=31337
NEXT_PUBLIC_RPC_URL=http://localhost:8545
NEXT_PUBLIC_ENABLE_TESTNET=true
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# 智能合约地址 (按网络分类)
# Mainnet
NEXT_PUBLIC_TREASURY_CONTRACT_MAINNET=0x...
NEXT_PUBLIC_QA_CARD_CONTRACT_MAINNET=0x...
NEXT_PUBLIC_USDT_CONTRACT_MAINNET=0xdAC17F958D2ee523a2206206994597C13D831ec7

# Sepolia (测试网)
NEXT_PUBLIC_TREASURY_CONTRACT_SEPOLIA=0x...
NEXT_PUBLIC_QA_CARD_CONTRACT_SEPOLIA=0x...
NEXT_PUBLIC_USDT_CONTRACT_SEPOLIA=0x...

# =================================
# 第三方服务配置
# =================================

# Sentry错误监控
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# 邮件服务 (SendGrid/NodeMailer)
MAIL_HOST=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USER=apikey
MAIL_PASS=your_sendgrid_api_key
MAIL_FROM=noreply@qa-app.com

# AWS S3 (文件存储)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=qa-app-files

# =================================
# 安全配置
# =================================
BCRYPT_ROUNDS=12
SESSION_SECRET="your-session-secret-key"
CSRF_SECRET="your-csrf-secret-key"

# =================================
# 监控和日志配置
# =================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
PROMETHEUS_ENABLED=false

# =================================
# 开发环境特定配置
# =================================
ENABLE_PLAYGROUND=true
ENABLE_INTROSPECTION=true
MOCK_BLOCKCHAIN=false

# =================================
# 生产环境特定配置
# =================================
# HTTPS_KEY_PATH=/path/to/private.key
# HTTPS_CERT_PATH=/path/to/certificate.crt
# ENABLE_HTTPS=true

# =================================
# Docker构建配置
# =================================
BUILD_VERSION=latest
BUILD_TIME=$(date -u +"%Y-%m-%dT%H:%M:%SZ")
COMMIT_SHA=$(git rev-parse --short HEAD)

# =================================
# Nginx配置
# =================================
NGINX_CLIENT_MAX_BODY_SIZE=50m
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024