{
  "name": "qa-app",
  "version": "1.0.0",
  "description": "Web3固定收益平台 - 全栈应用",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "postinstall": "node scripts/setup-database.js",
    "prestart": "npm run build",
    "dev": "turbo run dev",
    "build": "npm run build:deps && npm run build:db && npm run build:apps",
    "build:deps": "turbo run build --filter=@qa-app/shared --filter=@qa-app/ui --filter=@qa-app/database",
    "build:db": "turbo run db:generate && turbo run db:push",
    "build:apps": "turbo run build --filter=@qa-app/api --filter=@qa-app/web",
    "build:fast": "turbo run build --parallel",
    "build:cache": "turbo run build --cache-dir=.turbo",
    "build:production": "NODE_ENV=production npm run build",
    "start": "npm run start:prod",
    "start:dev": "turbo run dev",
    "start:prod": "node scripts/start-production.js",
    "start:docker": "docker-compose up -d",
    "stop": "node scripts/stop-system.js",
    "stop:docker": "docker-compose down",
    "restart": "npm run stop && npm run start",
    "status": "node scripts/system-status.js",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "turbo run db:seed",
    "db:setup": "node scripts/setup-database.js",
    "db:reset": "turbo run db:reset",
    "contracts:compile": "turbo run contracts:compile",
    "contracts:deploy": "turbo run contracts:deploy",
    "clean": "turbo run clean && npm run clean:logs",
    "clean:logs": "rm -rf logs/*.log logs/*.pid",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "health": "curl http://localhost:3001/health && curl http://localhost:3002",
    "logs": "tail -f logs/api.log logs/web.log"
  },
  "dependencies": {
    "pm2": "^5.4.2"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.49.1",
    "@turbo/gen": "^2.5.5",
    "@types/node": "^22.10.2",
    "eslint": "^8.57.1",
    "eslint-plugin-security": "^3.0.1",
    "playwright": "^1.49.1",
    "prettier": "^3.4.2",
    "turbo": "^2.5.5",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=10.0.0"
  }
}