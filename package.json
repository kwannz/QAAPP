{
  "name": "qa-app",
  "version": "1.0.0",
  "description": "Web3固定收益平台 - 全栈应用",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:fast": "turbo run build --parallel",
    "build:cache": "turbo run build --cache-dir=.turbo",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "turbo run db:seed",
    "contracts:compile": "turbo run contracts:compile",
    "contracts:deploy": "turbo run contracts:deploy",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@turbo/gen": "^2.5.5",
    "@types/node": "^22.10.2",
    "eslint": "^8.57.1",
    "playwright": "^1.49.1",
    "prettier": "^3.4.2",
    "turbo": "^2.5.5",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=10.0.0"
  }
}