{
  "name": "qa-app",
  "version": "1.0.0",
  "description": "Web3固定收益平台 - 全栈应用",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "postinstall": "node scripts/database/setup-database.js",
    "prestart": "npm run build",
    "dev": "turbo run dev",
    "build": "npm run build:deps && npm run build:db && npm run build:apps",
    "build:deps": "turbo run build --filter=@qa-app/shared --filter=@qa-app/ui --filter=@qa-app/database",
    "build:db": "turbo run db:generate && turbo run db:push",
    "build:apps": "turbo run build --filter=@qa-app/api --filter=@qa-app/web",
    "build:fast": "turbo run build --parallel",
    "build:cache": "turbo run build --cache-dir=.turbo",
    "build:production": "NODE_ENV=production npm run build",
    "start": "npm run start:prod",
    "start:dev": "turbo run dev",
    "start:prod": "node scripts/utils/start-production.js",
    "stop": "node scripts/utils/stop-system.js",
    "restart": "npm run stop && npm run start",
    "status": "node scripts/system-status.js",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "turbo run db:seed",
    "db:setup": "node scripts/database/setup-database.js",
    "db:reset": "turbo run db:reset",
    "contracts:compile": "turbo run contracts:compile",
    "contracts:deploy": "turbo run contracts:deploy",
    "clean": "turbo run clean && npm run clean:logs",
    "clean:logs": "rm -rf logs/*.log logs/*.pid",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "health": "curl http://localhost:3001/health && curl http://localhost:3002",
    "logs": "tail -f logs/api.log logs/web.log",
    "deploy:vps": "pnpm install --frozen-lockfile && pnpm run build:deps && pnpm run build:db:prod && pnpm run build:apps && pnpm start",
    "setup:vps": "chmod +x scripts/deployment/setup-vps.sh && ./scripts/deployment/setup-vps.sh",
    "deploy:vps": "chmod +x scripts/deployment/vps-deploy.sh && ./scripts/deployment/vps-deploy.sh",
    "validate:vps": "chmod +x scripts/deployment/validate-deployment.sh && ./scripts/deployment/validate-deployment.sh",
    "validate:env": "chmod +x scripts/deployment/validate-env.sh && ./scripts/deployment/validate-env.sh",
    "db:migrate:prod": "chmod +x scripts/database/migrate-db.sh && ./scripts/database/migrate-db.sh",
    "db:backup": "chmod +x scripts/database/backup-db.sh && ./scripts/database/backup-db.sh",
    "start:vps": "pnpm start",
    "build:db:prod": "pnpm --filter=@qa-app/database db:generate && pnpm --filter=@qa-app/database db:migrate:deploy",
    "pm2:start": "pm2 start ecosystem.config.js --env production && pm2 save",
    "pm2:stop": "pm2 stop ecosystem.config.js || true && pm2 delete ecosystem.config.js || true",
    "pm2:logs": "pm2 logs"
  },
  "dependencies": {
    "pm2": "^5.4.2"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/compat": "^1.3.2",
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.55.0",
    "@turbo/gen": "^2.5.5",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-unicorn": "^55.0.0",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=10.0.0"
  }
}