# QA App Development Environment Configuration
# =================================
# Database Configuration - PostgreSQL for Development
# =================================
DATABASE_URL="postgresql://qa_user:qa_password@localhost:5432/qa_database?schema=public"

# =================================
# API Configuration
# =================================
NODE_ENV=development
API_PORT=3001
JWT_SECRET=development-jwt-secret-change-in-production
JWT_EXPIRES_IN=7d

# =================================
# Web Application
# =================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_API_VERSION=v1
PORT=3000

# =================================
# Web3 Configuration - Development
# =================================
NEXT_PUBLIC_BLOCKCHAIN_ENABLED=false
NEXT_PUBLIC_BLOCKCHAIN_NETWORK=localhost
NEXT_PUBLIC_CHAIN_ID=31337
NEXT_PUBLIC_DISABLE_WALLETCONNECT=true
NEXT_PUBLIC_ENABLE_TESTNET=true
NEXT_PUBLIC_DEVELOPMENT_MODE=true

# WalletConnect Configuration
# 注意: 请在 https://cloud.reown.com 创建项目并获取项目ID
# 确保在项目设置中添加 http://localhost:3000 到允许的源列表
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=YOUR_PROJECT_ID_HERE

# Contract Addresses (will be populated after deployment)
NEXT_PUBLIC_CONTRACT_ADDRESS_TREASURY=""
NEXT_PUBLIC_CONTRACT_ADDRESS_YIELD_DISTRIBUTOR=""
NEXT_PUBLIC_CONTRACT_ADDRESS_QA_CARD=""
NEXT_PUBLIC_CONTRACT_ADDRESS_USDT=""

# =================================
# Development Features
# =================================
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_SERVICE_WORKER=false

# =================================
# Redis Configuration (Optional for Development)
# =================================
REDIS_URL=""
REDIS_PASSWORD=""

# =================================
# Logging
# =================================
LOG_LEVEL=info
LOG_FILE_ENABLED=false

# =================================
# Security & Performance
# =================================
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_ENABLED=false
ENABLE_METRICS=false
ENABLE_CACHE=false

# =================================
# Blockchain (Optional for Development)
# =================================
BLOCKCHAIN_ENABLED=false
BLOCKCHAIN_RPC_URL=http://127.0.0.1:8545
PRIVATE_KEY=""
SEPOLIA_RPC_URL=""
ETHERSCAN_API_KEY=""