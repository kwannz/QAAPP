
# Database
DATABASE_URL="postgresql://qauser:qapass123@localhost:5432/qadb"
POSTGRES_USER=qauser
POSTGRES_PASSWORD=qapass123
POSTGRES_DB=qadb

# Redis
REDIS_URL="redis://localhost:6379"
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d

# API
API_PORT=3001
API_BASE_URL=http://localhost:3001

# Web
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_URL=http://localhost:3002

# Blockchain
BLOCKCHAIN_RPC_URL=https://mainnet.infura.io/v3/your-infura-key
PRIVATE_KEY=your-private-key-for-testing
CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Environment
NODE_ENV=development

# Admin
ADMIN_EMAIL=admin@qa-app.com
ADMIN_PASSWORD=Admin123!@#

# CORS
CORS_ORIGINS=http://localhost:3002,http://localhost:3000

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@qa-app.com

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-change-this
COOKIE_SECRET=your-cookie-secret-change-this

# Features
ENABLE_SWAGGER=true
ENABLE_GRAPHQL=true
ENABLE_METRICS=true

# Cache
CACHE_TTL=300
CACHE_MAX_ITEMS=1000
