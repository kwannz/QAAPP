# ===========================================
# API后端生产环境配置 - QA App
# ===========================================

# 环境设置
NODE_ENV=production
PORT=3001

# 数据库配置 - PostgreSQL生产环境
DATABASE_URL="postgresql://qaapp_user:secure_password_change_me@postgres:5432/qaapp_prod?schema=public"

# JWT配置 - 生产环境必须更改
JWT_SECRET="your-super-secure-jwt-secret-change-in-production-256-bit-minimum"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# 缓存配置 - Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password_change_me
REDIS_DB=0

# 日志配置
LOG_LEVEL=warn
LOG_FILE_PATH=/app/logs
LOG_MAX_FILES=7
LOG_MAX_SIZE=10m

# 安全配置
CORS_ORIGINS="https://qa-app.com,https://www.qa-app.com"
CORS_CREDENTIALS=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# 监控配置
METRICS_RETENTION_HOURS=72
HEALTH_CHECK_TIMEOUT=5000

# 性能优化
NODEJS_MAX_OLD_SPACE_SIZE=2048
UV_THREADPOOL_SIZE=16

# 应用特定配置
APP_NAME="QA App API"
APP_VERSION="1.0.0"
API_PREFIX=api

# 文件上传限制
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# 外部服务配置 (可选)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM="QA App <noreply@qa-app.com>"

# Web3配置 (可选)
# ETHEREUM_RPC_URL="https://mainnet.infura.io/v3/your-project-id"
# PRIVATE_KEY="your-wallet-private-key"
# CONTRACT_ADDRESS="0x0000000000000000000000000000000000000000"

# 第三方API (可选)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# 监控和错误追踪 (可选)
# SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
# NEW_RELIC_LICENSE_KEY=your-new-relic-key
# NEW_RELIC_APP_NAME="QA App API"