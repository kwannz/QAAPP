# =================================================================
# 环境变量配置文件
# 复制此文件为 .env 并填入真实配置值
# =================================================================

# 应用基础配置
NODE_ENV=development
APP_NAME="QA App"
APP_VERSION="1.0.0"
APP_URL=http://localhost:3000
API_URL=http://localhost:3001

# 数据库配置
DATABASE_URL="postgresql://username:password@localhost:5432/qa_app_dev?schema=public"
SHADOW_DATABASE_URL="postgresql://username:password@localhost:5432/qa_app_shadow?schema=public"

# Redis配置
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# JWT配置
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="your-refresh-secret-key-here"
JWT_REFRESH_EXPIRES_IN="30d"

# 加密配置
ENCRYPTION_KEY="your-32-character-encryption-key-here"
HASH_SALT_ROUNDS=12

# 区块链配置
## 以太坊主网
ETHEREUM_RPC_URL="https://eth-mainnet.alchemyapi.io/v2/YOUR-API-KEY"
ETHEREUM_WS_URL="wss://eth-mainnet.alchemyapi.io/v2/YOUR-API-KEY"

## Polygon网络
POLYGON_RPC_URL="https://polygon-mainnet.alchemyapi.io/v2/YOUR-API-KEY"  
POLYGON_WS_URL="wss://polygon-mainnet.alchemyapi.io/v2/YOUR-API-KEY"
POLYGONSCAN_API_KEY="your-polygonscan-api-key"

## Arbitrum网络
ARBITRUM_RPC_URL="https://arb-mainnet.alchemyapi.io/v2/YOUR-API-KEY"
ARBITRUM_WS_URL="wss://arb-mainnet.alchemyapi.io/v2/YOUR-API-KEY"
ARBISCAN_API_KEY="your-arbiscan-api-key"

## 测试网络
MUMBAI_RPC_URL="https://polygon-mumbai.alchemyapi.io/v2/YOUR-API-KEY"
ARBITRUM_GOERLI_RPC_URL="https://arb-goerli.alchemyapi.io/v2/YOUR-API-KEY"

# 部署钱包私钥 (仅部署时使用)
PRIVATE_KEY="your-deployment-wallet-private-key"

# 合约地址 (部署后填写)
CONTRACT_TREASURY=""
CONTRACT_NFT=""
CONTRACT_DISTRIBUTOR=""
CONTRACT_USDT=""

# Web3 Wallet Connect配置
WALLETCONNECT_PROJECT_ID="your-walletconnect-project-id"

# 第三方服务配置
## AWS S3
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="qa-app-assets"

## Cloudflare R2 (备选)
CLOUDFLARE_R2_ENDPOINT="your-r2-endpoint"
CLOUDFLARE_R2_ACCESS_KEY="your-r2-access-key"
CLOUDFLARE_R2_SECRET_KEY="your-r2-secret-key"

## IPFS
IPFS_GATEWAY_URL="https://gateway.pinata.cloud/ipfs/"
PINATA_API_KEY="your-pinata-api-key"
PINATA_SECRET_API_KEY="your-pinata-secret-key"

# 邮件服务配置
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="noreply@qa-app.com"

# 短信服务配置 (阿里云/腾讯云)
SMS_ACCESS_KEY="your-sms-access-key"
SMS_SECRET_KEY="your-sms-secret-key"
SMS_REGION="cn-hangzhou"

# 监控和日志配置
## Sentry错误监控
NEXT_PUBLIC_SENTRY_DSN="your-sentry-dsn"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"

## LogRocket用户会话录制
NEXT_PUBLIC_LOGROCKET_APP_ID="your-logrocket-app-id"

## Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# 性能监控
## New Relic
NEW_RELIC_LICENSE_KEY="your-new-relic-license-key"
NEW_RELIC_APP_NAME="QA App"

# 安全配置
## CORS允许的域名
CORS_ORIGIN="http://localhost:3000,https://qa-app.com"

## 速率限制
RATE_LIMIT_WINDOW_MS=900000  # 15分钟
RATE_LIMIT_MAX_REQUESTS=100  # 每个IP最大请求数

## Session配置
SESSION_SECRET="your-session-secret-key"

# 支付相关 (如果有法币支付需求)
## Stripe
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# 开发工具配置
## 代码质量
REPORT_GAS=true
CMC_API_KEY="your-coinmarketcap-api-key"

## 测试配置
TEST_DATABASE_URL="postgresql://username:password@localhost:5432/qa_app_test?schema=public"

# 生产环境特有配置
## CDN
CDN_URL="https://cdn.qa-app.com"

## SSL证书
SSL_CERT_PATH="/path/to/ssl/cert.pem"
SSL_KEY_PATH="/path/to/ssl/private-key.pem"

## 负载均衡
LOAD_BALANCER_IP=""

# 部署配置
DOCKER_REGISTRY="your-docker-registry.com"
KUBERNETES_NAMESPACE="qa-app"

# 备份配置
BACKUP_S3_BUCKET="qa-app-backups"
BACKUP_RETENTION_DAYS=30

# =================================================================
# 重要安全提醒：
# 1. 永远不要将此文件提交到版本控制系统
# 2. 生产环境使用强密码和复杂密钥
# 3. 定期轮换敏感凭证
# 4. 使用环境变量管理工具如 AWS Secrets Manager
# =================================================================