# QA Investment Platform - Production Environment Variables

# ===========================================
# 数据库配置
# ===========================================
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://postgres:your_secure_postgres_password_here@postgres:5432/qa_app_prod?schema=public

# ===========================================
# Redis缓存配置
# ===========================================
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379

# ===========================================
# JWT认证配置
# ===========================================
JWT_SECRET=your_super_secure_jwt_secret_key_here_min_256_bits
JWT_EXPIRATION=7d

# ===========================================
# 区块链配置
# ===========================================
BLOCKCHAIN_RPC_URL=https://mainnet.infura.io/v3/your_infura_project_id
PRIVATE_KEY=your_secure_private_key_for_contract_interactions
TREASURY_ADDRESS=0x1234567890123456789012345678901234567890
QACARD_ADDRESS=0x1234567890123456789012345678901234567891
USDT_ADDRESS=0xA0b86a33E6441d5a4b56b8b17B6c2dFC5c95C7F2

# ===========================================
# 前端配置
# ===========================================
NEXT_PUBLIC_API_URL=https://api.qa-investment.com
NEXT_PUBLIC_WEB_URL=https://qa-investment.com
NEXT_PUBLIC_CHAIN_ID=1
NEXT_PUBLIC_RPC_URL=https://mainnet.infura.io/v3/your_infura_project_id
NEXT_PUBLIC_TREASURY_ADDRESS=0x1234567890123456789012345678901234567890
NEXT_PUBLIC_QACARD_ADDRESS=0x1234567890123456789012345678901234567891
NEXT_PUBLIC_USDT_ADDRESS=0xA0b86a33E6441d5a4b56b8b17B6c2dFC5c95C7F2
NEXT_PUBLIC_ENABLE_TESTNET=false

# ===========================================
# 邮件服务配置
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# ===========================================
# AWS S3配置（文件上传）
# ===========================================
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
S3_BUCKET=qa-investment-uploads

# ===========================================
# 监控配置
# ===========================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_secure_grafana_password

# ===========================================
# 安全配置
# ===========================================
# CORS允许的域名，生产环境中应该设置具体的域名
CORS_ORIGIN=https://qa-investment.com,https://admin.qa-investment.com

# API速率限制
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# ===========================================
# 日志配置
# ===========================================
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=30d

# ===========================================
# 性能配置
# ===========================================
# Node.js内存限制
NODE_OPTIONS=--max-old-space-size=2048

# 数据库连接池配置
DATABASE_POOL_SIZE=20
DATABASE_CONNECTION_TIMEOUT=60000

# Redis连接配置
REDIS_CONNECTION_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000

# ===========================================
# 业务配置
# ===========================================
# 最小投资金额（USD）
MIN_INVESTMENT_AMOUNT=1000

# 最大投资金额（USD）
MAX_INVESTMENT_AMOUNT=1000000

# 默认佣金费率（百分比）
DEFAULT_COMMISSION_RATE=3.0

# KYC验证是否必需
KYC_REQUIRED=true

# 自动审批限额（USD）
AUTO_APPROVAL_LIMIT=10000

# ===========================================
# 第三方服务配置
# ===========================================
# Twilio短信服务（可选）
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890

# SendGrid邮件服务（可选）
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@qa-investment.com

# ===========================================
# SSL证书配置（如果使用HTTPS）
# ===========================================
SSL_CERT_PATH=/etc/ssl/certs/qa-investment.com.crt
SSL_KEY_PATH=/etc/ssl/certs/qa-investment.com.key

# ===========================================
# 备份配置
# ===========================================
# 数据库备份S3存储桶
BACKUP_S3_BUCKET=qa-investment-backups
BACKUP_RETENTION_DAYS=30

# ===========================================
# 分析和统计配置
# ===========================================
# Google Analytics（可选）
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Sentry错误监控（可选）
SENTRY_DSN=https://your_sentry_dsn_here
SENTRY_ENVIRONMENT=production